commands:
  01_delete_pip_cache:
    command: "rm -rf /root/.cache/pip"
    ignoreErrors: true
  02_clean_tmp:
    command: "rm -rf /tmp/*"
    ignoreErrors: true
  03_clear_old_venvs:
    command: "rm -rf /var/app/venv/staging*"
    ignoreErrors: true

option_settings:
  aws:elasticbeanstalk:application:environment:
    PIP_NO_CACHE_DIR: "1"